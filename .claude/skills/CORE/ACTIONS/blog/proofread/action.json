{
  "name": "blog/proofread",
  "version": "1.0.0",
  "description": "Fix spelling and grammar errors only - no content changes",
  "author": {
    "name": "{PRINCIPAL.NAME}",
    "url": ""
  },
  "license": "MIT",
  "tags": ["blog", "editing", "grammar", "spelling"],
  "requires": ["llm"],
  "input": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["content"],
    "properties": {
      "content": {
        "type": "string",
        "minLength": 1,
        "description": "The text content to proofread"
      }
    },
    "additionalProperties": false
  },
  "output": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["corrected", "changes", "changeCount"],
    "properties": {
      "corrected": {
        "type": "string",
        "description": "The corrected text"
      },
      "changes": {
        "type": "array",
        "description": "List of changes made",
        "items": {
          "type": "object",
          "required": ["original", "corrected", "type"],
          "properties": {
            "original": { "type": "string" },
            "corrected": { "type": "string" },
            "type": {
              "type": "string",
              "enum": ["spelling", "grammar", "punctuation"]
            },
            "location": { "type": "string" }
          }
        }
      },
      "changeCount": {
        "type": "integer",
        "minimum": 0,
        "description": "Number of corrections made"
      }
    }
  },
  "deployment": {
    "timeout": 30000
  }
}
