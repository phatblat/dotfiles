{
  "env": {
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "DISABLE_AUTOUPDATER": "0"
  },
  "permissions": {
    "allow": [
      "Bash(./gradlew:*)",
      "Bash(abbr:*)",
      "Bash(brew:*)",
      "Bash(ccr code)",
      "Bash(cd:*)",
      "Bash(claude:*)",
      "Bash(done)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(fish:*)",
      "Bash(for:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(nu:*)",
      "Bash(perl:*)",
      "Bash(pip index versions:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "WebFetch(domain:github.com)",
      "Bash(/bin/ls:*)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(which:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)"
    ],
    "defaultMode": "dontAsk"
  },
  "model": "opusplan",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$( jq -r .tool_input.file_path )\" =~ \\.(ts|tsx|js|jsx)$ ]]; then prettier --write \"$( jq -r .tool_input.file_path )\"; fi"
          },
          {
            "type": "command",
            "command": "if [[ \"$( jq -r .tool_input.file_path )\" =~ \\.go$ ]]; then gofmt -w \"$( jq -r .tool_input.file_path )\"; fi"
          },
          {
            "type": "command",
            "command": "git-ai checkpoint claude --hook-input stdin"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "git-ai checkpoint claude --hook-input stdin"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun x -y @owloops/claude-powerline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "clangd@claude-code-lsps": true,
    "feature-dev@claude-code-plugins": true,
    "gopls@claude-code-lsps": true,
    "jdtls@claude-code-lsps": true,
    "omnisharp@claude-code-lsps": true,
    "pyright@claude-code-lsps": true,
    "rust-analyzer@claude-code-lsps": true,
    "solargraph@claude-code-lsps": true,
    "vscode-html-css@claude-code-lsps": true,
    "vtsls@claude-code-lsps": true
  },
  "alwaysThinkingEnabled": true
}
