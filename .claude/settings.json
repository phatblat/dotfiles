{
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest",
  "enabledPlugins": {
    "bash-language-server@claude-code-lsps": true,
    "clangd@claude-code-lsps": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-code-plugins": true,
    "csharp-lsp@claude-plugins-official": false,
    "dart-analyzer@claude-code-lsps": false,
    "document-skills@anthropic-agent-skills": true,
    "feature-dev@claude-plugins-official": true,
    "github@claude-plugins-official": false,
    "gopls@claude-code-lsps": true,
    "jdtls@claude-code-lsps": true,
    "kotlin-lsp@claude-code-lsps": true,
    "lua-language-server@claude-code-lsps": true,
    "nixd@claude-code-lsps": true,
    "omnisharp@claude-code-lsps": true,
    "plugin-dev@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "pyright@claude-code-lsps": true,
    "rust-analyzer@claude-code-lsps": true,
    "slack@claude-plugins-official": false,
    "solargraph@claude-code-lsps": true,
    "sourcekit-lsp@claude-code-lsps": true,
    "superpowers@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "terraform-ls@claude-code-lsps": true,
    "typescript-lsp@claude-plugins-official": false,
    "vtsls@claude-code-lsps": true,
    "yaml-language-server@claude-code-lsps": true
  },
  "env": {
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "DISABLE_AUTOUPDATER": "0"
  },
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "if [[ \"$( jq -r .tool_input.file_path )\" =~ \\.(ts|tsx|js|jsx)$ ]]; then prettier --write \"$( jq -r .tool_input.file_path )\"; fi",
            "type": "command"
          },
          {
            "command": "if [[ \"$( jq -r .tool_input.file_path )\" =~ \\.go$ ]]; then gofmt -w \"$( jq -r .tool_input.file_path )\"; fi",
            "type": "command"
          },
          {
            "command": "git-ai checkpoint claude --hook-input stdin",
            "type": "command"
          }
        ],
        "matcher": "Write|Edit|MultiEdit"
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run lint-changed"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run typecheck-changed"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run check-any-changed"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run test-changed"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run check-comment-replacement"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run check-unused-parameters"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "git-ai checkpoint claude --hook-input stdin",
            "type": "command"
          }
        ],
        "matcher": "Write|Edit|MultiEdit"
      },
      {
        "matcher": "Read|Edit|MultiEdit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run file-guard"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run typecheck-project"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run lint-project"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run test-project"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run check-todos"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run self-review"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run create-checkpoint"
          }
        ]
      }
    ],
    "SubagentStop": [],
    "SessionStart": [],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run codebase-map"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run thinking-level"
          }
        ]
      }
    ]
  },
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(./gradlew:*)",
      "Bash(abbr:*)",
      "Bash(brew:*)",
      "Bash(ccr code)",
      "Bash(cd:*)",
      "Bash(claude:*)",
      "Bash(done)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(fish:*)",
      "Bash(for:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(nu:*)",
      "Bash(perl:*)",
      "Bash(pip index versions:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "WebFetch(domain:github.com)",
      "Bash(/bin/ls:*)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(which:*)",
      "Edit(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Read(./**)",
      "WebFetch(domain:*)",
      "Write(./**)"
    ],
    "defaultMode": "acceptEdits",
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)"
    ]
  },
  "skipDangerousModePermissionPrompt": true,
  "statusLine": {
    "command": "bun x -y @owloops/claude-powerline@latest --config=~/.config/claude-powerline/config.json",
    "padding": 0,
    "type": "command"
  }
}
