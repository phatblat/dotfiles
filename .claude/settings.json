{
  "alwaysThinkingEnabled": true,
  "env": {
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "DISABLE_AUTOUPDATER": "0"
  },
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "if [[ \"$( jq -r .tool_input.file_path )\" =~ \\.(ts|tsx|js|jsx)$ ]]; then prettier --write \"$( jq -r .tool_input.file_path )\"; fi",
            "type": "command"
          },
          {
            "command": "if [[ \"$( jq -r .tool_input.file_path )\" =~ \\.go$ ]]; then gofmt -w \"$( jq -r .tool_input.file_path )\"; fi",
            "type": "command"
          },
          {
            "command": "git-ai checkpoint claude --hook-input stdin",
            "type": "command"
          }
        ],
        "matcher": "Write|Edit|MultiEdit"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "if [[ \"$(jq -r .tool_input.command)\" =~ \"git commit\" ]] && [[ \"$(git branch --show-current 2>/dev/null)\" =~ ^(main|master)$ ]]; then echo \"Direct commits to main/master branch are not allowed\"; exit 2; fi",
            "type": "command"
          },
          {
            "command": "if [[ \"$(jq -r .tool_input.command)\" =~ ^git\\ push ]]; then echo \"Git push commands require explicit user approval\"; exit 2; fi",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      },
      {
        "hooks": [
          {
            "command": "git-ai checkpoint claude --hook-input stdin",
            "type": "command"
          }
        ],
        "matcher": "Write|Edit|MultiEdit"
      }
    ]
  },
  "model": "claude-haiku-4-5-20251001",
  "permissions": {
    "allow": [
      "Bash(./gradlew:*)",
      "Bash(abbr:*)",
      "Bash(brew list:*)",
      "Bash(brew install:*)",
      "Bash(ccr code)",
      "Bash(cd:*)",
      "Bash(done)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(fish:*)",
      "Bash(for:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(mise config:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(nu:*)",
      "Bash(perl:*)",
      "Bash(pip index versions:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "WebFetch(domain:github.com)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)"
    ]
  },
  "statusLine": {
    "command": "bun x -y @owloops/claude-powerline@latest --style=powerline",
    "padding": 0,
    "type": "command"
  }
}