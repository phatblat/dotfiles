#
# .editorconfig
# dotfiles
#
# https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[{*.js,*.json,*.yml}]
indent_size = 2

# Tab indentation (no size specified)
[Makefile,.gitconfig]
indent_style = tab
