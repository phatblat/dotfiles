#
# .config/radard2/radare2rc
# dotfiles
#
# https://radare.gitbooks.io/radare2book/configuration/files.html
#

# Sample from https://github.com/xn0px90/radare2rc

# Shows pseudocode in disassembly. Eg mov eax, str.ok = > eax = str.ok
e asm.pseudo = true


#ESIL EMU
e asm.emu=true
e asm.esil = true
# Display stack and register values on top of disasembly view (visual mode)
e cmd.stack = true

# Solarized theme
eco solarized

# Use UTF-8 to show cool arrows that do not look like crap :)
e scr.utf8 = true

e asm.describe = true

# Sanbox settings
e cfg.sandbox=false

