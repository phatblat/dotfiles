#!/usr/bin/env bash

# ghostty - Wrapper for Ghostty terminal emulator
function ghostty() {
    local ghostty_bin="/Applications/Ghostty.app/Contents/MacOS/ghostty"

    if [[ ! -x "$ghostty_bin" ]]; then
        echo "Error: Ghostty not found at $ghostty_bin" >&2
        echo "Install via: brew install --cask ghostty" >&2
        return 1
    fi

    "$ghostty_bin" "$@"
}
